from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver import ActionChains
import time

# Step 1: Launch browser and open page
driver = webdriver.Chrome()
driver.get("https://www.lambdatest.com/selenium-playground")

# Step 2: Click “Drag & Drop Sliders”
driver.find_element(By.LINK_TEXT, "Drag & Drop Sliders").click()

# Step 3: Locate the slider for "Default value 15"
slider = driver.find_element(By.XPATH, "//input[@value='15']")
range_value = driver.find_element(By.ID, "rangeSuccess")

# Step 4: Use ActionChains to drag the slider
action = ActionChains(driver)
action.click_and_hold(slider).move_by_offset(215, 0).release().perform()
time.sleep(1)  # Allow slider value to update

# Step 5: Validate the range value
assert range_value.text == "95", f"Expected 95 but got {range_value.text}"

driver.quit()
