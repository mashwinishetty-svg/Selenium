from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import Select
import time

# Step 1: Launch browser and open URL
driver = webdriver.Chrome()
driver.get("https://www.lambdatest.com/selenium-playground")

# Step 2: Click "Input Form Submit"
driver.find_element(By.LINK_TEXT, "Input Form Submit").click()

# Step 3: Click Submit without entering any data
submit_button = driver.find_element(By.XPATH, "//button[@type='submit']")
submit_button.click()

# Step 4: Validate "Please fill out this field." message
# This validation relies on HTML5 native browser validation
# So, we can check the 'validationMessage' attribute using JavaScript
name_field = driver.find_element(By.NAME, "name")
message = driver.execute_script("return arguments[0].validationMessage;", name_field)
assert "Please fill out this field" in message, "Validation message not shown!"

# Step 5: Fill the form fields
driver.find_element(By.NAME, "name").send_keys("Ash Tester")
driver.find_element(By.NAME, "email").send_keys("ash.tester@example.com")
driver.find_element(By.NAME, "password").send_keys("SecurePass123")
driver.find_element(By.NAME, "company").send_keys("LambdaTest Inc.")
driver.find_element(By.NAME, "website").send_keys("www.lambdatest.com")
driver.find_element(By.NAME, "city").send_keys("Bangalore")
driver.find_element(By.NAME, "address_line1").send_keys("123 Test Street")
driver.find_element(By.NAME, "address_line2").send_keys("Suite 45")
driver.find_element(By.NAME, "state").send_keys("Karnataka")
driver.find_element(By.NAME, "zip").send_keys("560001")

# Step 6: Select Country as "United States"
select_country = Select(driver.find_element(By.NAME, "country"))
select_country.select_by_visible_text("United States")

# Step 7: Submit the form
submit_button.click()

